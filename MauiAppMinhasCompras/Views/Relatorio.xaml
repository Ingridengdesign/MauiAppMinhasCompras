<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.Relatorio"
             Title="Relatório de Compras">

    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Filtro por Período" FontSize="Large" FontAttributes="Bold" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <VerticalStackLayout Grid.Column="0">
                <Label Text="Data Inicial" />
                <DatePicker x:Name="dpk_inicial" Format="dd/MM/yyyy" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Data Final" />
                <DatePicker x:Name="dpk_final" Format="dd/MM/yyyy" />
            </VerticalStackLayout>
        </Grid>

        <Button Text="Filtrar Compras" Clicked="Button_Filtrar_Clicked" />

        <Line Margin="0,15" />

        <Label Text="Resultados" FontSize="Medium" FontAttributes="Bold" />

        <CollectionView x:Name="cv_produtos_filtrados">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,5" CornerRadius="5" BorderColor="LightGray">
                        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding Descricao}" FontAttributes="Bold" />
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding DataCadastro, StringFormat='{0:dd/MM/yyyy}'}" FontSize="Small" />
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding Quantidade, StringFormat='{0} un'}" FontSize="Small" />
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Total, StringFormat='R$ {0:N2}'}" FontAttributes="Bold" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>